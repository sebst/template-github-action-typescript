{
  "name": "template-github-action-typescript",
  "version": "0.0.1",
  "description": "Description of template-github-action-typescript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "release": "ncc build src/index.ts -o dist",
    "check-all": "concurrently \"npm:format-check\" \"npm:lint\" \"npm:test\" \"npm:build\"",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint **/*.ts",
    "test": "jest --testTimeout 10000"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sebst/template-github-action-typescript.git"
  },
  "keywords": [
    "Actions",
    "GitHub",
    "Template",
    "Hello World",
    "TypeScript"
  ],
  "author": "Bas Steins",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sebst/template-github-action-typescript/issues"
  },
  "homepage": "https://bas.codes/",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.8.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  }
}
